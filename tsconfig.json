{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "es2018"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    // change this to any hyperscript like function that you're using
    "jsxFactory": "React.createElement",
    "sourceMap": true,
    "outDir": "dist/esm5",
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": [
    "./src",
    "./src/stemmer.d.ts",
    "./src/lib/morphological-utility.d.ts",
    "./src/lib/stemmer-utility.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false,
  "buildOnSave": false
}
